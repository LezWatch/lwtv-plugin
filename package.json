{
  "name": "lwtv-plugin",
  "version": "1.0.0",
  "description": "LezWatch.TV Plugin",
  "main": "index.js",
  "workspaces": [
    "blocks"
  ],
  "scripts": {
    "build": "npm-run-all build:*",
    "build:workspaces": "npm install --workspaces && npm run build --workspaces",
    "lint": "npm-run-all lint:*",
    "lint:js": "npm run lint:js --workspaces",
    "lint:css": "npm run lint:css --workspaces",
    "lint:phpcs": "composer lint",
    "preinstall": "composer install",
    "postinstall": "node ./node_scripts/postinstall.js",
    "prepare": "husky install",
    "clean": "rm -rf node_modules plugins/vendor"
  },
  "author": "LezWatch.TV",
  "license": "GPL-2.0",
  "repository": "https://github.com/lezwatch/lwtv-plugin/",
  "dependencies": {
    "@npmcli/fs": "^3.1.0",
    "chart.js": "^4.0.1",
    "chartjs-plugin-annotation": "^2.1.0",
    "git-clone": "^0.2.0",
    "postinstall": "*",
    "tablesorter": "^2.31.3",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^18.11.13",
    "husky": "^8.0.0"
  }
}
